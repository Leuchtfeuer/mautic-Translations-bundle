{
  "name": "leuchtfeuer/mautic-translations-bundle",
  "description": "AI-based translation of Mautic content e.g. emails",
  "type": "mautic-plugin",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Leuchtfeuer Digital Marketing GmbH",
      "email": "mautic-plugins@Leuchtfeuer.com"
    }
  ],
  "homepage": "https://www.leuchtfeuer.com",
  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "mautic/core-lib": "^5.0",
    "mautic/grapes-js-builder-bundle": "^5.0"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.14",
    "symfony/browser-kit": "^5.4",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-phpunit": "^1.4",
    "phpstan/phpstan-strict-rules": "^1.5",
    "rector/rector": "^1.2"
  },

  "extra": {
    "install-directory-name": "LeuchtfeuerTranslationsBundle"
  },

  "autoload": {
    "psr-4": {
      "MauticPlugin\\LeuchtfeuerTranslationsBundle\\": ""
    }
  },

  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/mautic/FOSOAuthServerBundle.git"
    },
    {
      "type": "git",
      "url": "https://github.com/mautic/BazingaOAuthServerBundle.git"
    },
    {
      "type": "git",
      "url": "https://github.com/mautic/SpBundle.git",
      "canonical": false
    },
    {
      "type": "git",
      "url": "https://github.com/mautic/SymfonyBridgeBundle.git",
      "canonical": false
    }
  ],

  "config": {
    "allow-plugins": {
      "symfony/flex": true
    }
  }
}
